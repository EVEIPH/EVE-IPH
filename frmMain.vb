        SQL = SQL.Substring(0, Len(SQL) - 1) & ") "

        ' Now determine what space we are looking at
        SQL = SQL & "AND SPACE IN ("

        If chkMineAmarr.Checked = True Then
            SQL = SQL & "'Amarr',"
        End If
        If chkMineCaldari.Checked = True Then
            SQL = SQL & "'Caldari',"
        End If
