            If chkMineIncludeHighYieldOre.Checked = False Then
                ' Only base ores
                SQL = SQL & "AND ORES.HIGH_YIELD_ORE = 0 "
            End If
        End If

        ' See where we want this for security
        SQL = SQL & "AND SYSTEM_SECURITY IN ("

        If chkMineIncludeHighSec.Checked = True Then
