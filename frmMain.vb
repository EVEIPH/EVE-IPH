                        And DCAgentList(i).DataCoreSkill = DBAgent.Field And DCAgentList(i).AgentAvailable Then
                        lstDCViewRow.ForeColor = Color.Blue
                        Exit For
                    End If
                Next

            End If

            pnlProgressBar.Value = pnlProgressBar.Value + 1

        Next

