        Select Case ShipName
            Case Venture
                ImageFile = MiningShipTypeID.Venture
            Case Covetor
                ImageFile = MiningShipTypeID.Covetor
            Case Retriever
                ImageFile = MiningShipTypeID.Retriever
            Case Hulk
                ImageFile = MiningShipTypeID.Hulk
            Case Skiff
