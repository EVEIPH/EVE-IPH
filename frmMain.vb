            Dim SVR1 As Double
            Dim SVR2 As Double

            ' swap p2 and p1 to do decending sort
            If IsNothing(p1.SVR) Then
                SVR1 = 0
            Else
                SVR1 = CDbl(p1.SVR)
            End If

            If IsNothing(p2.SVR) Then
                SVR2 = 0
