        SystemChecked = False

        ' Progress Bar Init
        pnlProgressBar.Value = 0

        ' Make sure they have at least one region checked first
        For i = 1 To RegionCheckBoxes.Length - 1
            If RegionCheckBoxes(i).Checked = True Then
                RegionChecked = True
                Exit For
            End If
